{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:inferno/recommended"],
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [
    "inferno"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": 0,
    "no-console": ["error", { allow: ["warn", "error"] }]
  }
}
